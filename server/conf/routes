# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                             com.nlines.acapitaladay.controllers.Application.index(idx: Int = -1)
GET        /country/:idx                             com.nlines.acapitaladay.controllers.Application.index(idx: Int)

# Prefix must match `play.assets.urlPrefix`
GET        /assets/*file                 controllers.Assets.at(file)
